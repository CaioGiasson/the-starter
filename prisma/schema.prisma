generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Customer {
  name  String
  email String
}

type Product {
  sku   String
  name  String
  price Float
}

enum PaymentMethod {
  CREDIT_CARD
  PIX
}

type ChargeData {
  amount      Float
  method      PaymentMethod
  requestedAt DateTime
}

type PaymentData {
  aut    String
  doc    String
  paidAt DateTime
}

model Invoice {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  customer    Customer
  product     Product
  createdAt   DateTime     @default(now())
  chargeData  ChargeData?
  paymentData PaymentData?
}

model Request {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  url       String
  method    String
  createdAt DateTime @default(now())
  body      Json?
  headers   Json?

  response  Json?
  status    Int?
  updatedAt DateTime?
}

model Callback {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  url  String
  body Json
}
